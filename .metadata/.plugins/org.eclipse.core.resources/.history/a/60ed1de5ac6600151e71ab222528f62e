
public class ExampleWhile {

/*
 * New ground once more
 * The while loop
 * I hope I can survive
 */

	public static void main(String[] args) {
	//"While Loop" Practice
		int x = -10;
		
		while(x <= 0){
			System.out.println("x = " + x);
			x++;
		}
		int a = -10;
		
		while(a <= 0){
			System.out.println("a = " + a);
			a = a + 3;
		}
		int b = -10;
		
		while(b <= 0){
			System.out.println("b = " + b);
			b += 1;
		}
			
		

	}

}
