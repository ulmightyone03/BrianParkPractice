
public class ExampleFor {
	
/*
 * I am finally starting
 * For loops
 * Go me kekeke~
 */

	public static void main(String[] args) {
		// i++  i = i + 1
	// for(initial value; condition; increment/decrement)
		for(int i = 0; i <= 10; i++){
			System.out.println("i = " + i);
		}
		for(int i = 10; i > 0; i--){
			System.out.println("i = " + i);
		}
	}

}
